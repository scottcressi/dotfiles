set use_from = yes
set envelope_from = yes

set folder = "imaps://imap.gmail.com:993"
set spoolfile = "+INBOX"
set ssl_force_tls = yes

# G to get mail
bind index G imap-fetch-mail
set editor = "vim"
set charset = "utf-8"
set record = ''

#collapse threads
folder-hook . "push \eV"
set collapse_unread=yes
set uncollapse_jump=yes

source ~/.mutt/muttpass
source ~/.mutt/muttemail
